@page
@using Ris2022.Pages.Account
@model LoginIModel

@{
    ViewData["Title"] = Resource.Home;
    Layout = "_LoginLayout";
}

<h1>@Resources.Resource.LogIn</h1>
<section>
    <div class="slider" >
    <!-- Set up your HTML -->
    <div class="owl-carousel " >

        <div class="item">
            <div class="img slider-img"><img src="assets/images/slider/slider-3e.jpg" alt=""></div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
                        <div class="slider-captions">
                            <h1 class="slider-title">It's time for better help.</h1>
                            <p class="slider-text hidden-xs">We can help you conquer a wide range of psychological and emotional problems.</p>
                            <a href="#" class="btn btn-primary hidden-xs">Schedule A Visit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="item">
            <div class="img slider-img"> <img src="assets/images/slider/slider-3e.jpg" alt=""></div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
                        <div class="slider-captions">
                            <h1 class="slider-title">Meet our psychiatrists</h1>
                            <p class="slider-text hidden-xs">Our psychiatrists are highly skilled to meet your unique needs.</p>
                            <a href="#" class="btn btn-primary hidden-xs">Meet Psychiatrists</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />
<br />
</section>
<section class="section-form" id="contact">

    <div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2></h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.UserName" class="form-label"></label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@Resource.LogIn</button>
                </div>
            </form>
        </section>
    </div>
</div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
