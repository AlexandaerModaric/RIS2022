@using Microsoft.AspNetCore.Html
@model IEnumerable<Ris2022.Data.Models.Paytype>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
